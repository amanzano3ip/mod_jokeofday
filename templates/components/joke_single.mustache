{{!
    @template mod_jokeofday/components/joke_single


    Example context (json):
    {

    }
}}
<div class="col-sm" data-region="mod_jokeofday_joke_single-{{ id }}" data-id="{{id}}" data-type="{{ type }}">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ category }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ joke_id }} - {{ type }}</h6>
            <p class="card-text">{{ joke }}</p>
            <span class="badge badge-success">{{ lang }}</span>

        </div>
        <div class="card-footer">
            <form >
                <div class="form-row">
                    <div class="form-group">
                        <label for="inputState">Valora el chiste</label>
                        <select id="inputState" class="form-control" data-action="score" data-id="{{ id }}">
                            <option selected value="not">Sin valorar</option>
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{# js }}

  require(['mod_jokeofday/joke'], function(joke) {
    joke.initJoke('[data-region="mod_jokeofday_joke_single-{{ id }}"]', {{ id }}, {{ cmid }});
  });

{{/ js }}
